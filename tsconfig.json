{
  "compilerOptions": {
    "sourceMap": false,
    "allowJs": false,
    "target": "es5",
    "lib": [
      "es6",
      "dom",
      "es5",
    ],
    "outDir": "dist",
    "jsx": "react",
    "noEmit": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
  },
  "useTsconfigDeclarationDir": true,
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
    "*.js",
    "dist"
  ]
}
